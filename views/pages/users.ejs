<% layout('layouts/main') -%>

<div class="container">
    <h1><%= title %></h1>
    <div class="row">
        <div class="col-lg-12 text-end">
            <a class="btn btn-primary" href="/user/create">Create</a>
        </div>

        <div class="col-lg-12">
           <table class="table table-striped">
            <thead>
                <tr>
                  <th width="35%">Name</th>
                  <th width="35%">Email</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                  <% content.forEach(item => { %>
                    <tr>
                        <td><%= item.firstName %></td>
                        <td><%= item.email %></td>
                        <td class="text-center">
                            <a href="/user/<%= item._id %> " class="btn btn-secondary">Edit</a>
                        </td>
                        <td class="text-center">
                            <button data-id="<%= item._id %>" class="btn btn-danger del">Delete</button>
                        </td>
                    </tr>
                <% }) %>
              </tbody>
           </table>
        </div>
    </div>
  
</div>